<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1D1D"
    tools:context=".MainActivity">

    <!-- Display Area (Top 25%) -->
    <LinearLayout
        android:id="@+id/displayArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#1D1D1D"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25">

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:gravity="end|bottom"
            android:textColor="@color/colorWhite"
            android:padding="16dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text=""
            android:gravity="end|center"
            android:textColor="@color/colorWhite"
            android:padding="16dp"
            android:textSize="32sp" />
    </LinearLayout>

    <!-- Button Grid (Bottom 75%) -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/displayArea"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1: AC, %, x², π, backspace -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/all_clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/red_button" />

            <Button
                android:id="@+id/percentage"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/power2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x²"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/pi"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="π"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/backspace"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="⌫"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_operations" />
        </LinearLayout>

        <!-- Row 2: x³, sin, cos, tan, eˣ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/power3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="xⁿ"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/sin"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sin"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/cos"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="cos"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/tan"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="tan"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/exp_e_power_x"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="eˣ"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />
        </LinearLayout>

        <!-- Row 3: 1/x, sin⁻¹, cos⁻¹, tan⁻¹, √ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one_by_x"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1/x"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/asin"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="sin⁻¹"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/acos"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="cos⁻¹"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/atan"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="tan⁻¹"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/sqrt"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="√"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />
        </LinearLayout>

        <!-- Row 4: 7 8 9 × C(=AC duplicate or normal clear) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/multiplication"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_operations" />

            <Button
                android:id="@+id/clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_operations" />
        </LinearLayout>

        <!-- Row 5: 4 5 6 - n! -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/substracation"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_operations" />

            <Button
                android:id="@+id/factorial_n"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="n!"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />
        </LinearLayout>

        <!-- Row 6: 1 2 3 + ( ) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/number3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/addition"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_operations" />

            <Button
                android:id="@+id/brackets"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="( )"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />
        </LinearLayout>

        <!-- Row 7: 0 . = -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/dot"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/ripple_effect_numbers" />

            <Button
                android:id="@+id/equal"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="="
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/red_button" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
